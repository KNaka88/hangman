<!DOCTYPE>
<html>
    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <title>Hangman</title>
    </head>
    <body>
        <h1>Hangman</h1>

        <div class='container'>
            <div class='row'>
                <div class='col-md-6'>
                 #hangman image

                 <form action='\reset' method='post'>
                    <button name='/reset' type="submit" class='btn btn-danger'>Reset</button>
                </form>
                </div>
                <div class='col-md-6'>
                    <h3>Correct</h3>
                    <ul>
                    <!--#show correct arary-->
                    {% for answer in game.getUserAnswers %}
                        <li> {{ answer }} </li>
                    {% endfor %}
                    </ul>

                    <h3>Remaining</h3>
                    <ul>
                    <!--#show remaining-->
                    {% for remain in game.getRemainingAlphabet %}
                        <li> {{ remain }} </li>
                    {% endfor %}
                    </ul>

                    <p>Wrong counter</p>
                    {{game.getWrongAnswers}}

                    <form action='/' method='post'>
                        <label for='letter-input'>Please Choose a letter</label>
                        <input type='text' maxlength='1' pattern='[a-z]*[A-Z]*' name='letter-input'>
                        <button type="submit" class="btn btn-info">Save Hangman</button>
                    </form>



                </div>

            </div>

        </div>


    </body>
</html>
